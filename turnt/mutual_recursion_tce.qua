let is_even(x) = {
  let even(x, odd) = {
    if x == 0 {
      true
    } else {
      odd(x - 1)
    }
  };
  let odd(x) = {
    if x == 0 {
      false
    } else {
      even(x - 1, odd)
    }
  };
  let x = if x < 0 { -x } else { x };
  odd(x)
};
print(is_even(1234567));
print(is_even(6543210));
